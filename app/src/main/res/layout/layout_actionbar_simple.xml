<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:padding="@dimen/padding_action_bar">

    <ImageView
        android:id="@+id/img_left"
        android:layout_width="@dimen/width_height_icon_action_bar"
        android:layout_height="@dimen/width_height_icon_action_bar"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/margin_right_icon_item_menu"
        android:background="?android:selectableItemBackground"
        android:padding="@dimen/padding_icon_action_bar"
        android:clickable="true"
        app:srcCompat="@drawable/ic_menu"/>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_left"
        android:textColor="@color/color_text_white"
        android:textSize="@dimen/size_text_large"/>

    <ImageView
        android:id="@+id/img_right"
        android:layout_width="@dimen/width_height_icon_action_bar"
        android:layout_height="@dimen/width_height_icon_action_bar"
        android:layout_alignParentRight="true"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/padding_icon_action_bar"/>
</RelativeLayout>